<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vM"
            type="dev.brdlf.medtracker.viewmodel.MedBuilderViewModel" />
        <variable
            name="alarmsAdapter"
            type="dev.brdlf.medtracker.AlarmsListAdapter" />
        <variable
            name="alarmCount"
            type="String" />

        <import type="android.view.View"/>
    </data>
    <!--TODO: Make pretty-->
    <!--TODO: Make style for layout-->
    <!--TODO: Remove hardcoded spacing and use weights-->
    <androidx.constraintlayout.widget.ConstraintLayout

        android:paddingTop="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AddMedicationFragment">

        <!--Med-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/section_meds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/section_alarms"
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/title"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medTextAdd" />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/row_med_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/input_med_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="96dp"
                    android:text="@string/medName" />

                <EditText
                    android:id="@+id/input_med_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="2"
                    android:text="@={vM.medName}"
                    android:hint="@string/med_name_hint"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLEASE ADD A DESCRIPTION"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:minHeight="48dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/multi_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:showText="true"
                    android:text="Multiple times a day"
                    android:visibility="visible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/row_freq"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--                android:visibility="@{multiDay.checked ? View.VISIBLE : View.GONE}"-->
                <TextView
                    android:id="@+id/per_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="96dp"
                    android:text="Doses per day" />

                <EditText
                    android:id="@+id/per_day_doses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:digits="123456789"
                    android:maxLength="1"
                    android:minWidth="48dp"
                    android:text="@{alarmCount}"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dose(s) per day"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Alarms-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/section_alarms"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/section_buttons"
            app:layout_constraintTop_toBottomOf="@id/section_meds"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/alarmText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/alarm_text"
                android:textAlignment="center" />
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/alarmdiv"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="128dp"
                tools:text="This is where the alarms are going to go, formatted"
                />

            <Button
                android:id="@+id/alarm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="click this to modify alarms" />
            <!--TODO: Create layout for recyclerView-->
            <!--        Specifically, I need to have it so that the recyclerview height adapts to the number of items.-->
            <!--        While not taking up more space than it needs.-->
            <!--        and not going past the screensize.-->
            <!--        I should be able to do this with weights.-->

<!--            android:visibility="@{isTethered.checked ? View.GONE : View.VISIBLE}"-->
            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/alarms_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adapter="@{alarmsAdapter}"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/view_alarm_add" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Buttons-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/section_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/section_alarms"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/cancel_button"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel" />
            <Button
                android:id="@+id/finish_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_medication" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
